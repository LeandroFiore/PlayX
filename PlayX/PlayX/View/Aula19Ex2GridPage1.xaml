<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PlayX.View.Aula19Ex2GridPage1">

    <!--cores na notação hexadecimal: www.color-hex.com-->
    <Grid BackgroundColor="White" Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <StackLayout Grid.Row="0" Orientation="Vertical" VerticalOptions="Center">
            <Label Text="Cadastro de Usuários" TextColor="Purple" FontSize="30" HorizontalOptions="Center"/>
            <Label Text="Faça o login ou registre-se" TextColor="Gray" FontSize="18" HorizontalOptions="Center"/>
        </StackLayout>
        <Button Grid.Row="1" Text="Login" TextColor="White" BackgroundColor="#2073b7" FontAttributes="Bold"/>
        <Button Grid.Row="2" Text="Registrar" TextColor="White" BackgroundColor="#2073b7" FontAttributes="Bold"/>

    </Grid>
</ContentPage>